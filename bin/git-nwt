# New Work Tree

BR=$1
DESC=$2

function printHelp() {
    cat >&2 <<EOF
$(tput bold)Usage$(tput sgr0): git nwt <branch> [description]
EOF
}

if [[ -z "$BR" ]]; then
    echo "Error: Please provide branch name" >&2
    echo >&2
    printHelp
    exit 1
fi

DIR="$(git gr)@$BR"

git worktree add -B "$BR" "$DIR"
test -z "$DESC" || git config branch."$BR".description "$DESC"

echo "New worktree is created at '$DIR'";
